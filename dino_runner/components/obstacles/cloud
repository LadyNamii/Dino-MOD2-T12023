import os
import CLOUD

class Cloud():
    def __init__(self):
        super().__init__(Cloud, 0)
        self.rect.y = randrange(50,300, 90)
        self.step_index = 0.25

    def draw(self, screen):
        screen.blit(self.image[self.step_index // 5], self.rect)
        self.step_index += 1

        if self.step_index >= 10:
            self.step_index = 0




    
    

    